<Window x:Class="GestaoFinanceira.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
        xmlns:local="clr-namespace:GestaoFinanceira.Views"
        mc:Ignorable="d"
        Height="720" Width="1080" WindowStartupLocation="CenterScreen" WindowStyle="None"
        AllowsTransparency="True" Background="Transparent">

	<Window.Resources>
		<BooleanToVisibilityConverter x:Key="BoolToVis"/>
	</Window.Resources>
	
    <Border Background="#eff2f7" CornerRadius="30" MouseDown="Border_MouseDown" MouseLeftButtonDown="Border_MouseLeftButtonDown">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Menu -->
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <!-- Menu Icon -->
                <Button Margin="20 28 0 35" Style="{StaticResource topButton}">
                    <Icon:PackIconMaterial Kind="Menu" Width="15" Height="15" />
                </Button>

                <Border Grid.Row="1" Background="#523ed0" CornerRadius="0 50 0 30">
                    <DockPanel>
                        <Border Width="80" Height="80" Padding="3" Background="White" CornerRadius="100"
                                DockPanel.Dock="Top" HorizontalAlignment="Left" Margin="20 -30 0 0">
                            <Ellipse>
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="/Images/User_Icon.png" />
                                </Ellipse.Fill>
                            </Ellipse>
                        </Border>

                        <TextBlock Text="Usuário" Foreground="White" FontSize="20" FontWeight="Bold"
                                   DockPanel.Dock="Top" TextAlignment="Center" Margin="5 25 0 10" />
                        <TextBlock Text="Gestao Financeira" Foreground="#d0bfff" FontSize="14" FontWeight="SemiBold"
                                   DockPanel.Dock="Top" TextAlignment="Center" />

                        <!-- Menu Separator -->
                        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="#7e5fdc" />

                        <!-- Menu Buttons -->
                        <StackPanel DockPanel.Dock="Top">
                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="MonitorDashboard" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Dashboard" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Top">
                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="SwapHorizontal" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Transações" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Top">
                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Target" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Metas de Gastos" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Top">
                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="ChartBar" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Relatórios" />
                                </StackPanel>
                            </Button>
                        </StackPanel>
                        <StackPanel DockPanel.Dock="Top">
                            <Button Style="{StaticResource menuButton}">
                                <StackPanel Orientation="Horizontal">
                                    <Icon:PackIconMaterial Kind="Chat" Style="{StaticResource menuButtonIcon}"/>
                                    <TextBlock Text="Chat Inteligente" />
                                </StackPanel>
                            </Button>
                        </StackPanel>


                    </DockPanel>
                </Border>
            </Grid>

            <!-- Main Section -->
            <Grid Grid.Column="1" Margin="30 20 20 20">
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                    <RowDefinition Height="auto" />
                </Grid.RowDefinitions>
                
                <!-- Search Textbox-->
                <Grid Width="300" HorizontalAlignment="Left">
                    <TextBlock Margin="20 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                               Panel.ZIndex="1" Text="Pesquisar"
							   Visibility="{Binding ElementName=txtSearch ,Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}"/>

                    <TextBox x:Name="txtSearch" Style="{StaticResource textboxSearch}"/>
                    <Icon:PackIconMaterial Kind="Magnify" Width="15" Height="15" VerticalAlignment="Center"
                                           Margin="0 0 15 0" Foreground="#b0b9c6" HorizontalAlignment="Right"/>
                </Grid>
                
                <!-- Top Buttons-->
                <Button Style="{StaticResource topButton}" Margin="0 0 20 0" Background="#dcdcdc" HorizontalAlignment="Right" Click="CloseButton_Click">
                    <Icon:PackIconMaterial Kind="Close" Width="15" Height="15" />
                </Button>

                <Button Style="{StaticResource topButton}" Margin="0 0 55 0" Background="#dcdcdc" HorizontalAlignment="Right">
                    <Icon:PackIconMaterial Kind="Cog" Width="15" Height="15" />
                </Button>
                
                <!-- Page Title-->
                <TextBlock Text="Transações" Grid.Row="1" FontSize="32" FontWeight="SemiBold" Margin="0 20 0 0"
                           HorizontalAlignment="Left" Foreground="#121518" />
                
                <!-- Add Button-->
                <Button Style="{StaticResource addButton}">
                    <StackPanel Orientation="Horizontal">
                        <Icon:PackIconMaterial Kind="Plus" Width="11" Height="11" VerticalAlignment="Center" Margin="0 1 8 0"/>
                        <TextBlock Text="Adicionar Transação"/>
                    </StackPanel>
                    
                </Button>

                <!-- Separator -->
                <Separator Height="1" Grid.Row="3" Background="#dae2ea" Margin="0 -1 0 10"/>
                
                <!-- Tab Buttons-->
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0 10 0 0">
                    <Button Content="Todas" Style="{StaticResource tabButton}" BorderBrush="#784ff2"/>
                    <Button Content="Receitas" Style="{StaticResource tabButton}" />
                    <Button Content="Despesas" Style="{StaticResource tabButton}" />
                </StackPanel>
                
                <!-- Counter Title-->
                <TextBlock Text="Total de Transações" Grid.Row="4" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Foreground="#121518" 
                           HorizontalAlignment="Left"/>
                
                <TextBlock Text="Filtrar por" Grid.Row="4" FontSize="18" FontWeight="SemiBold" VerticalAlignment="Center" Margin="0 0 215 0"  Foreground="#121518" 
                           HorizontalAlignment="Right"/>

                <!-- Filter Textbox-->
                <Grid Width="200" HorizontalAlignment="Right" Grid.Row="4">
                    <TextBlock Margin="15 0" VerticalAlignment="Center" Foreground="#b0b9c6" IsHitTestVisible="False"
                           Panel.ZIndex="1" Text="Filtrar por..."
						   Visibility="{Binding ElementName=txtFilter ,Path=Text.IsEmpty,Converter={StaticResource BoolToVis}}"/>

                    <TextBox x:Name="txtFilter" Style="{StaticResource textboxSearch}"/>
                </Grid>
                
                <!-- DataGrid -->
                <DataGrid Grid.Row="5" ItemsSource="{Binding PagedTransactions}" AutoGenerateColumns="False" CanUserAddRows="False">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="70"/>
                        <DataGridTextColumn Header="Tipo" Binding="{Binding Tipo}" Width="120"/>
                        <DataGridTextColumn Header="Categoria" Binding="{Binding Categoria}" Width="150"/>
                        <DataGridTextColumn Header="Valor" Binding="{Binding Valor}" Width="100"/>
                        <DataGridTextColumn Header="Data" Binding="{Binding Data}" Width="150"/>
                    </DataGrid.Columns>
                </DataGrid>

                <!-- Paging Controls -->
                <StackPanel Grid.Row="6" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
                    <Button Command="{Binding PreviousPageCommand}" Margin="5" Style="{StaticResource pagingButton}">
                        <Icon:PackIconMaterial Kind="ChevronLeft" Style="{StaticResource pagingButtonIcon}" />
                    </Button>
                    <TextBlock Text="{Binding CurrentPage}" VerticalAlignment="Center" Margin="5"/>
                    <Button Command="{Binding NextPageCommand}" Margin="5" Style="{StaticResource pagingButton}">
                        <Icon:PackIconMaterial Kind="ChevronRight" Style="{StaticResource pagingButtonIcon}" />
                    </Button>
                </StackPanel>


            </Grid>
                
        </Grid>
    </Border>
</Window>
